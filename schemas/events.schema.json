{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://design-framework.example.com/schemas/events.schema.json",
  "title": "Events Schema",
  "description": "画面イベントとアクション定義のためのスキーマ。UIインタラクション、画面遷移、API呼び出しなどを技術スタック非依存で表現します。",
  "type": "object",
  "properties": {
    "events": {
      "type": "array",
      "description": "画面内で定義されるイベントの配列",
      "items": {
        "$ref": "#/definitions/Event"
      }
    }
  },
  "required": ["events"],
  "definitions": {
    "Event": {
      "type": "object",
      "description": "イベント定義。UIの動作（クリック、入力変更等）とそれに対応するアクションを定義します。",
      "properties": {
        "eventId": {
          "type": "string",
          "description": "イベント識別子（画面内で一意）。命名規則: evt_{action}_{target}",
          "pattern": "^evt_[a-z0-9_]+$"
        },
        "name": {
          "type": "string",
          "description": "イベント名（人間が理解しやすい日本語または英語）",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "イベントの説明（AI編集時の文脈理解に有用）"
        },
        "trigger": {
          "$ref": "#/definitions/Trigger",
          "description": "イベントのトリガー設定（どの要素のどの操作で発火するか）"
        },
        "actions": {
          "type": "array",
          "description": "イベント発火時に実行されるアクションの配列（順次実行）",
          "items": {
            "$ref": "#/definitions/Action"
          },
          "minItems": 1
        }
      },
      "required": ["eventId", "name", "trigger", "actions"]
    },
    "Trigger": {
      "type": "object",
      "description": "イベントトリガーの定義",
      "properties": {
        "element": {
          "type": "string",
          "description": "トリガーとなる要素のID（fieldsまたはlayoutで定義された要素、またはscreenId）"
        },
        "event": {
          "type": "string",
          "description": "イベント名（DOM標準イベントまたはカスタムイベント）",
          "enum": [
            "click",
            "dblclick",
            "hover",
            "focus",
            "blur",
            "change",
            "input",
            "submit",
            "reset",
            "keydown",
            "keyup",
            "keypress",
            "scroll",
            "drag",
            "drop",
            "mount",
            "unmount",
            "elementClick",
            "elementHover",
            "areaClick",
            "backgroundClick",
            "nodeClick"
          ]
        },
        "condition": {
          "$ref": "#/definitions/Expression",
          "description": "イベント発火の条件式（省略時は常に発火）"
        },
        "debounce": {
          "type": "integer",
          "description": "デバウンス時間（ミリ秒）",
          "minimum": 0
        },
        "throttle": {
          "type": "integer",
          "description": "スロットル時間（ミリ秒）",
          "minimum": 0
        }
      },
      "required": ["element", "event"]
    },
    "Action": {
      "type": "object",
      "description": "アクション定義。イベント発火時に実行される具体的な動作を定義します。",
      "properties": {
        "type": {
          "type": "string",
          "description": "アクションタイプ",
          "enum": [
            "navigate",
            "api",
            "setState",
            "validate",
            "custom"
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "navigate" } }
          },
          "then": {
            "$ref": "#/definitions/NavigateAction"
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "api" } }
          },
          "then": {
            "$ref": "#/definitions/ApiAction"
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "setState" } }
          },
          "then": {
            "$ref": "#/definitions/SetStateAction"
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "validate" } }
          },
          "then": {
            "$ref": "#/definitions/ValidateAction"
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "custom" } }
          },
          "then": {
            "$ref": "#/definitions/CustomAction"
          }
        }
      ]
    },
    "NavigateAction": {
      "type": "object",
      "description": "画面遷移アクション",
      "properties": {
        "type": { "const": "navigate" },
        "target": {
          "type": "string",
          "description": "遷移先のscreen ID"
        },
        "params": {
          "type": "object",
          "description": "遷移時に渡すパラメータ。{field.xxx}や{event.xxx}で動的参照可能。",
          "additionalProperties": true
        },
        "replace": {
          "type": "boolean",
          "description": "履歴を置換するか",
          "default": false
        },
        "openInNewTab": {
          "type": "boolean",
          "description": "新しいタブで開くか",
          "default": false
        }
      },
      "required": ["type", "target"]
    },
    "ApiAction": {
      "type": "object",
      "description": "API呼び出しアクション。interfacesで定義されたAPIを呼び出します。",
      "properties": {
        "type": { "const": "api" },
        "interfaceRef": {
          "type": "string",
          "description": "interfaces.yamlで定義されたインターフェースID"
        },
        "input": {
          "type": "object",
          "description": "API入力データ。{field.xxx}等で動的参照可能。",
          "additionalProperties": true
        },
        "onSuccess": {
          "type": "array",
          "description": "API呼び出し成功時に実行するアクション",
          "items": {
            "$ref": "#/definitions/Action"
          }
        },
        "onError": {
          "type": "array",
          "description": "API呼び出し失敗時に実行するアクション",
          "items": {
            "$ref": "#/definitions/Action"
          }
        }
      },
      "required": ["type", "interfaceRef"]
    },
    "SetStateAction": {
      "type": "object",
      "description": "状態変更アクション。要素やアプリ状態の値を変更します。",
      "properties": {
        "type": { "const": "setState" },
        "target": {
          "type": "string",
          "description": "対象の状態キーまたは要素ID"
        },
        "value": {
          "description": "設定する値。{field.xxx}や{response.xxx}、{event.xxx}で動的参照可能。"
        }
      },
      "required": ["type", "target", "value"]
    },
    "ValidateAction": {
      "type": "object",
      "description": "バリデーションアクション",
      "properties": {
        "type": { "const": "validate" },
        "targets": {
          "type": "array",
          "description": "バリデーション対象のフィールドID配列",
          "items": { "type": "string" },
          "minItems": 1
        },
        "stopOnError": {
          "type": "boolean",
          "description": "エラー時に後続のアクションを停止するか",
          "default": true
        }
      },
      "required": ["type", "targets"]
    },
    "CustomAction": {
      "type": "object",
      "description": "カスタムアクション。プロジェクト固有の動作を定義します。",
      "properties": {
        "type": { "const": "custom" },
        "action": {
          "type": "string",
          "description": "カスタムアクション名。namespace.action形式を推奨。",
          "examples": ["viewer.zoomIn", "diagram.resetZoom", "tooltip.show"]
        },
        "params": {
          "type": "object",
          "description": "カスタムアクションに渡すパラメータ",
          "additionalProperties": true
        }
      },
      "required": ["type", "action"]
    },
    "Expression": {
      "description": "条件式。文字列式で表現します。{field.xxx}で値を参照。",
      "type": "string",
      "minLength": 1,
      "examples": [
        "{field.email} !== ''",
        "{state.isLoggedIn} === true",
        "{response.status} === 'success'"
      ]
    }
  }
}
