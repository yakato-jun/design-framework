{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://design-framework.example.com/schemas/interfaces.schema.json",
  "title": "Interfaces Schema",
  "description": "サイト単位のAPI定義スキーマ。フラットな構造で、各キーがインターフェースIDとなる。イベントからはinterfaceRefで参照される。",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/Interface"
  },
  "definitions": {
    "Interface": {
      "type": "object",
      "description": "インターフェース定義。APIエンドポイントの仕様を定義する。",
      "properties": {
        "name": {
          "type": "string",
          "description": "インターフェース名（人間が理解しやすい日本語または英語）",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "インターフェースの説明"
        },
        "method": {
          "type": "string",
          "description": "HTTPメソッド",
          "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
        },
        "path": {
          "type": "string",
          "description": "APIエンドポイントパス。内部APIは相対パス(/api/...)、外部APIは絶対URL(https://...)。パスパラメータは{param}形式。",
          "minLength": 1
        },
        "external": {
          "type": "boolean",
          "description": "外部APIフラグ。trueの場合は外部サービスへの呼び出し（実装不要）。省略時はfalse（内部API、実装が必要）。",
          "default": false
        },
        "input": {
          "$ref": "#/definitions/DataModel",
          "description": "入力データモデル（リクエストボディ）"
        },
        "output": {
          "$ref": "#/definitions/DataModel",
          "description": "出力データモデル（レスポンスボディ）"
        },
        "queryParams": {
          "type": "object",
          "description": "クエリパラメータの定義",
          "additionalProperties": {
            "$ref": "#/definitions/ParameterDefinition"
          }
        },
        "pathParams": {
          "type": "object",
          "description": "パスパラメータの定義",
          "additionalProperties": {
            "$ref": "#/definitions/ParameterDefinition"
          }
        },
        "headers": {
          "type": "object",
          "description": "リクエストヘッダー",
          "additionalProperties": {
            "type": "string"
          }
        },
        "authentication": {
          "$ref": "#/definitions/AuthenticationDefinition",
          "description": "認証要件"
        },
        "errors": {
          "type": "array",
          "description": "エラー定義の配列",
          "items": {
            "$ref": "#/definitions/ErrorDefinition"
          }
        },
        "timeout": {
          "type": "integer",
          "description": "タイムアウト時間（ミリ秒）",
          "minimum": 0
        },
        "retry": {
          "$ref": "#/definitions/RetryPolicy",
          "description": "リトライポリシー"
        },
        "cache": {
          "$ref": "#/definitions/CachePolicy",
          "description": "キャッシュポリシー"
        }
      },
      "required": ["method", "path"]
    },
    "ParameterDefinition": {
      "type": "object",
      "description": "パラメータ定義",
      "properties": {
        "type": {
          "type": "string",
          "description": "データ型",
          "enum": ["string", "number", "integer", "boolean", "array"]
        },
        "required": {
          "type": "boolean",
          "description": "必須フラグ",
          "default": false
        },
        "default": {
          "description": "デフォルト値"
        },
        "description": {
          "type": "string",
          "description": "説明"
        },
        "enum": {
          "type": "array",
          "description": "許可される値の列挙",
          "items": {}
        }
      },
      "required": ["type"]
    },
    "AuthenticationDefinition": {
      "type": "object",
      "description": "認証定義",
      "properties": {
        "type": {
          "type": "string",
          "description": "認証タイプ",
          "enum": ["bearer", "basic", "apiKey", "oauth2", "none"]
        },
        "required": {
          "type": "boolean",
          "description": "認証が必須か",
          "default": true
        }
      },
      "required": ["type"]
    },
    "RetryPolicy": {
      "type": "object",
      "description": "リトライポリシー",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "リトライを有効にするか",
          "default": false
        },
        "maxRetries": {
          "type": "integer",
          "description": "最大リトライ回数",
          "minimum": 1,
          "default": 3
        },
        "retryOn": {
          "type": "array",
          "description": "リトライ対象のHTTPステータスコード",
          "items": {
            "type": "integer"
          },
          "default": [408, 429, 500, 502, 503, 504]
        }
      }
    },
    "CachePolicy": {
      "type": "object",
      "description": "キャッシュポリシー",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "キャッシュを有効にするか",
          "default": false
        },
        "ttl": {
          "type": "integer",
          "description": "キャッシュ有効期間（秒）",
          "minimum": 0
        }
      }
    },
    "DataModel": {
      "type": "object",
      "description": "データモデル定義",
      "properties": {
        "type": {
          "type": "string",
          "description": "データ型",
          "enum": ["object", "array", "string", "number", "integer", "boolean"]
        },
        "properties": {
          "type": "object",
          "description": "オブジェクトのプロパティ定義（type: objectの場合）",
          "additionalProperties": {
            "$ref": "#/definitions/DataModel"
          }
        },
        "required": {
          "type": "array",
          "description": "必須プロパティ名の配列",
          "items": {
            "type": "string"
          }
        },
        "items": {
          "$ref": "#/definitions/DataModel",
          "description": "配列の要素型（type: arrayの場合）"
        },
        "description": {
          "type": "string",
          "description": "説明"
        }
      },
      "required": ["type"]
    },
    "ErrorDefinition": {
      "type": "object",
      "description": "エラー定義",
      "properties": {
        "code": {
          "type": "string",
          "description": "エラーコード"
        },
        "message": {
          "type": "string",
          "description": "エラーメッセージ"
        },
        "httpStatus": {
          "type": "integer",
          "description": "HTTPステータスコード",
          "minimum": 100,
          "maximum": 599
        },
        "userMessage": {
          "type": "string",
          "description": "ユーザー向けメッセージ（日本語）"
        }
      },
      "required": ["code", "message"]
    }
  }
}
